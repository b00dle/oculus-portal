<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE setup SYSTEM "config.dtd">

<setup>
  
  <global>
    
    <transmitteroffset>
      <x>0.0</x>
      <y>0.0043</y>
      <z>1.6</z>
    </transmitteroffset>

    <notrackingposition>
      <x>0.0</x>
      <y>1.75</y>
      <z>1.5</z>
    </notrackingposition>

    <groundfollowing>
      <activated>True</activated>
      <raystartheight>0.75</raystartheight>
    </groundfollowing>

  </global>
  
  <device>

    <type>Spheron</type>

    <inputsensor>device-old-spheron</inputsensor>

    <trackingstation>tracking-old-spheron</trackingstation>

    <platformpos>
      <x>0.0</x>
      <y>0.0</y>
      <z>6.0</z>
    </platformpos>

    <platformrot>
      <yaw>0.0</yaw>
    </platformrot>

    <platformsize>
      <width>3.8</width>
      <depth>3.6</depth>
    </platformsize>

  </device>

  <!-- First Power Wall User -->
  <user>

    <type>PowerWallUser</type>

    <headtrackingstation>tracking-glasses-1</headtrackingstation>

    <startplatform>0</startplatform>

    <warnings>True</warnings>

  </user>
  
   

</setup>